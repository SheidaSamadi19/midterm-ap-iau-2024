class Creating_Password:
def __init__ (self ,Pasword):
self.Pasword = Pasword

Pass1 = Creating_Password('RCvNz1rWRp1Bm87')
Pass2 = Creating_Password('BQq8W80YT7q0P6')
Pass3 = Creating_Password('PPTWgg3vGRLkJP4b')
Pass4 = Creating_Password('9MCys9gQPstLHlryp')
Pass5 = Creating_Password('SDJJwybYmwGvH6ZQHO')
Pass6 = Creating_Password('gc41dDmDk5Yfxr1nGC')
Pass7 = Creating_Password('xTNY54K5tY7YQ')
Pass8 = Creating_Password('KQT08tj4C12CH6')
Pass9 = Creating_Password('mCrjrB4vPkn0x0F')
