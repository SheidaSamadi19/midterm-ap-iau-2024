symbols = ['@' , '#']
vowels = ['a', 'i', 'u', 'e', 'o']
letters = ['a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z']


# Checking conditions for password 1

if len(Pass1.Pasword) not in range (12 , 20):
print('Password Should Be Between 12 & 19 Characters. ')

if not (char.vowels for char in Pass1.Pasword):
print ('Password Shouldent Have Vowels Letters Like ( a, i, u, e, o ). ')

if not any(char.isupper() for char in Pass1.Pasword):
print('Pasword Should Have Capital Letter As Well. ')

if not any (char.islower() for char in Pass1.Pasword):
print('Pasword Should Have Small Letter As Well. ')
print('Paasword 1 :',Pass1.Pasword)


